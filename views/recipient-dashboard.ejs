<!DOCTYPE html>
<html data-theme="light" lang="en">
  <head>
    <%- include('./partials/head.ejs'); %>
    <title>Dashboard | DonateLife</title>
  </head>
  <body class="min-h-screen"
   style="
        background-image: url('/pics/recipient.png');
        background-size: cover;
        background-position: center;
      "
    >

    <%- include('./partials/dashboard-navbar.ejs') %>
    
   
    <main
    
      class="flex flex-col items-center justify-start p-6 space-y-6 pt-20 bg-white/20"
    >
      <!-- Header -->
      <div
        class="w-full max-w-4xl bg-red-500 text-white px-6 py-4 rounded-lg flex justify-between items-center shadow-md"
      >
        <div class="flex space-x-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-6 h-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
            />
          </svg>
        </div>
        <a href="/recipient/recipient-history">History</a>
      </div>

      <!-- Profile Card -->
      <div
        class="w-full max-w-4xl bg-white/30 p-6 rounded-xl shadow-md text-center"
      >
        <!-- User Info and Stats -->
        <div class="flex flex-col lg:flex-row justify-between items-center">
          <!-- User Info -->
          <div class="flex flex-col items-center space-y-2">
            <div
              class="w-16 h-16 bg-gray-300 rounded-full flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-8 h-8 text-gray-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5.121 17.804A11.954 11.954 0 0112 15c2.5 0 4.847.776 6.879 2.096M15 12a3 3 0 10-6 0 3 3 0 006 0z"
                />
              </svg>
            </div>
            <p class="font-semibold text-gray-700"><%= user.username %></p>

            <div class="space-y-2 mt-2">
              <!-- Request Blood Button -->
              <button
                onclick="toggleRequestForm()"
                class="bg-red-500 hover:bg-red-800 text-white px-4 py-2 rounded-full shadow-md"
              >
                Request Blood
              </button>
            </div>
          </div>
        </div>

        <!-- Request Blood Form (Initially Hidden) -->
<!-- Request Blood Form (Initially Hidden) -->
<div
  id="requestForm"
  class="mt-10 hidden transition-all duration-500"
>
  <div class="backdrop-blur-md bg-white/20 border border-white/40 rounded-2xl shadow-2xl p-8">
    <h2 class="text-xl font-bold text-red-800 mb-6 text-center">Send Your Request!</h2>

    <form
      action="/request"
      method="post"
      class="grid grid-cols-1 md:grid-cols-2 gap-6"
    >
      <!-- Blood group -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Blood Group</label>
        <select
          name="bloodgroup"
          class="w-full px-4 py-2 rounded-lg bg-red-600/80 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-red-400 shadow-md"
        >
          <option disabled selected>Select Blood Group</option>
          <option>O+</option><option>A+</option><option>B+</option><option>AB+</option>
        </select>
      </div>

      <!-- Phone -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
        <input
          name="phone"
          type="tel"
          placeholder="01XXXXXXXXX"
          class="w-full px-4 py-2 rounded-lg bg-white/70 border border-red-400 focus:outline-none focus:ring-2 focus:ring-red-400 shadow-md"
        />
      </div>

      <!-- Location -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Location</label>
        <select
          name="location"
          class="w-full px-4 py-2 rounded-lg bg-red-600/80 text-white focus:outline-none focus:ring-2 focus:ring-red-400 shadow-md"
        >
          <option disabled selected>Select Location</option>
          <option>LabAid Hospital</option>
          <option>DMCH</option>
          <option>Popular Medical</option>
        </select>
      </div>

      <!-- Blood Unit -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Blood Unit</label>
        <input
          name="bags"
          type="number"
          placeholder="e.g., 2 bags"
          class="w-full px-4 py-2 rounded-lg bg-white/70 border border-red-400 focus:outline-none focus:ring-2 focus:ring-red-400 shadow-md"
        />
      </div>

      <!-- Description -->
      <div class="md:col-span-2">
        <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
        <input
          name="description"
          type="text"
          placeholder="Write something here..."
          class="w-full px-4 py-2 rounded-lg bg-white/70 border border-red-400 focus:outline-none focus:ring-2 focus:ring-red-400 shadow-md"
        />
      </div>

      <!-- Date & Time -->
      <div class="md:col-span-2">
        <label class="block text-sm font-medium text-gray-700 mb-1">Requested Date & Time</label>
        <input
          type="datetime-local"
          name="requestedDate"
          class="w-full px-4 py-2 rounded-lg bg-white/70 border border-red-400 focus:outline-none focus:ring-2 focus:ring-red-400 shadow-md"
        />
      </div>

      <!-- Submit -->
      <div class="md:col-span-2 flex justify-center">
        <button
          type="submit"
          class="bg-red-600 hover:bg-red-700 text-white px-8 py-3 rounded-full shadow-xl transition-all duration-300 transform hover:scale-105"
        >
          Send Request
        </button>
      </div>
    </form>
  </div>
</div>

    </main>

    <script>
      function toggleRequestForm() {
        const form = document.getElementById("requestForm");
        form.classList.toggle("hidden");
      }
    </script>
  </body>
</html>
