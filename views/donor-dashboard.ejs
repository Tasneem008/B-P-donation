<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs'); %>
    <title>Dashboard | DonateLife</title>
  </head>
  <body class="bg-red-100 min-h-screen">
    <%- include('./partials/dashboard-navbar.ejs') %>

    <main class="flex flex-col items-center justify-start p-6 space-y-6">
      <!-- Header -->
      <div class="w-full max-w-4xl bg-red-500 text-white px-6 py-4 rounded-lg flex justify-between items-center shadow-md">
        <div class="flex space-x-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
        </div>
      </div>

      <!-- Profile Card -->
      <div class="w-full max-w-4xl bg-pink-100 p-6 rounded-xl shadow-md text-center">
        <!-- User Info and Stats -->
        <div class="flex flex-col lg:flex-row justify-between items-center">
          <!-- User Info -->
          <div class="flex flex-col items-center space-y-2">
            <div class="w-16 h-16 bg-gray-300 rounded-full flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M5.121 17.804A11.954 11.954 0 0112 15c2.5 0 4.847.776 6.879 2.096M15 12a3 3 0 10-6 0 3 3 0 006 0z" />
              </svg>
            </div>
            <p class="font-semibold text-gray-700"><%= user.username %></p>

            <div class="space-y-2 mt-2">
              <!-- Donate Blood Button -->
              <button
                onclick="toggleDonateForm()"
                class="bg-red-700 hover:bg-red-800 text-white px-4 py-2 rounded-lg shadow">
                Donate Blood
              </button>

              <!-- Request Blood Button -->
              <button
                onclick="toggleRequestForm()"
                class="bg-red-700 hover:bg-red-800 text-white px-4 py-2 rounded-full shadow-md">
                Request Blood
              </button>
            </div>
          </div>

          <!-- Stats -->
          <div class="flex items-center justify-center gap-6 mt-6 lg:mt-0">
            <div class="w-20 h-20 border-4 border-red-600 rounded-full flex items-center justify-center text-center text-sm">
              <div>
                <p class="text-xs font-semibold">O+</p>
              </div>
            </div>

            <div class="w-24 h-24 border-4 border-red-600 rounded-full flex items-center justify-center text-center">
              <div>
                <p class="text-sm">Next donation in<br><span class="font-bold">3 months</span></p>
              </div>
            </div>

            <div class="w-20 h-20 border-4 border-red-600 rounded-full flex items-center justify-center text-center text-sm">
              <div>
                <p class="font-semibold">6<br>donations</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Donate Blood Form (Initially Hidden) -->
        <div
          id="donateForm"
          class="bg-red-200 mt-10 p-6 rounded-xl hidden transition-all duration-300">
          <h2 class="text-lg font-semibold mb-4">Donate Your Blood!</h2>
          <form action="/donate" method="post"
            class="flex flex-col flex-wrap gap-4 bg-red-50 p-6 rounded-xl shadow-md">

            <input type="text" name="name" placeholder="Full Name" required
             class="px-4 py-2 rounded-lg border border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500" />

            <input type="number" name="age" placeholder="Age" min="18" required
               class="px-4 py-2 rounded-lg border border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500" />

            <input type="tel" name="phone" placeholder="Phone Number" required
               class="px-4 py-2 rounded-lg border border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500" />

            <input type="text" name="address" placeholder="Address" required
               class="px-4 py-2 rounded-lg border border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500" />
              

            <input type="text" name="nid" placeholder="National ID Number" required
               class="px-4 py-2 rounded-lg border border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500" />

            <select name="bloodgroup" required
              class="px-4 py-2 rounded-lg bg-red-700 text-white focus:outline-none focus:ring-2 focus:ring-red-500">
              <option value="">Select Blood Group</option>
              <option>O+</option>
              <option>A+</option>
              <option>B+</option>
              <option>AB+</option>
              <option>O-</option>
              <option>A-</option>
              <option>B-</option>
              <option>AB-</option>
            </select>
            <p class="font-medium">Preferable Locations</p>
  <label class="flex items-center gap-2">
    <input type="checkbox" name="locations[]" value="Popular Medical" class="w-4 h-4">
    Popular Medical
  </label>
  
  <label class="flex items-center gap-2">
    <input type="checkbox" name="locations[]" value="LabAid" class="w-4 h-4">
    LabAid
  </label>

  <label class="flex items-center gap-2">
    <input type="checkbox" name="locations[]" value="DMCH" class="w-4 h-4">
    DMCH
  </label>
            <label class="block">
              <span class="text-gray-700">Last Donation Date</span>
              <input type="datetime-local" name="lastDonation"
             class="mt-1 px-4 py-2 rounded-lg border border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500">
            </label>


            <div class="bg-white p-4 rounded-lg border border-red-600">
              <p class="text-sm mb-2">
                I certify that all the information I have provided is truthful and accurate to the best of my knowledge.
              </p>
              <label class="flex items-center space-x-2">
                <input type="checkbox" name="consent" required class="h-4 w-4 text-red-600" />
                <span class="text-sm">I agree</span>
              </label>
            </div>

            <button type="submit"
              class="bg-red-700 text-white hover:bg-red-800 px-6 py-2 rounded-lg shadow transition">
              Submit Donation
            </button>
          </form>
        </div>

        <!-- Request Blood Form (Initially Hidden) -->
        <div
          id="requestForm"
          class="bg-red-200 mt-10 p-6 rounded-xl hidden transition-all duration-300">
          <h2 class="text-lg font-semibold mb-4">Send Your Request!</h2>
          <form action="/request" method="post"
            class="flex flex-col lg:flex-row flex-wrap gap-4 justify-center items-center bg-red-50 p-6 rounded-xl shadow-md">

            <select name="bloodgroup"
              class="px-4 py-2 rounded-lg bg-red-700 text-white focus:outline-none focus:ring-2 focus:ring-red-500">
              <option>Select Blood Group</option>
              <option>O+</option>
              <option>A+</option>
              <option>B+</option>
              <option>AB+</option>
            </select>

            <input name="phone" type="number" placeholder="Phone Number"
              class="px-4 py-2 rounded-lg border border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500" />

            <select name="location"
              class="px-4 py-2 rounded-lg bg-red-700 text-white focus:outline-none focus:ring-2 focus:ring-red-500">
              <option>Location</option>
              <option>LabAid Hospital</option>
              <option>DMCH</option>
              <option>Popular Medical</option>
            </select>

            <input name="bags" type="number" placeholder="Blood Unit"
              class="px-4 py-2 rounded-lg border border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500" />

            <input name="description" type="text" placeholder="Description"
              class="px-4 py-2 rounded-lg border border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500" />

            <label class="block">
              <span class="text-gray-700">Requested Date & Time</span>
              <input type="datetime-local" name="requestedDate"
                class="mt-1 px-4 py-2 rounded-lg border border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500">
            </label>

            <div class="w-full"></div>
            <button type="submit"
              class="bg-red-700 text-white hover:bg-red-800 px-6 py-2 rounded-lg shadow transition">
              Send Request
            </button>
          </form>
        </div>
      </div>
    </main>

    <script>
      function toggleRequestForm() {
        const form = document.getElementById('requestForm');
        form.classList.toggle('hidden');
      }
      function toggleDonateForm() {
        const donateForm = document.getElementById('donateForm');
        donateForm.classList.toggle('hidden');
      }
    </script>
  </body>
</html>
