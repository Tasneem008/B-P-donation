<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs'); %>

    <title>Dashboard | DonateLife</title>
  </head>
  <body class="bg-red-100 min-h-screen flex flex-col">
    <%- include('./partials/dashboard-navbar.ejs') %>

    <main class="flex-grow flex items-center justify-center p-6">
      <div
        class="bg-white p-8 rounded-xl shadow-lg w-full max-w-md text-center"
      >
        <h1 class="text-3xl font-bold text-red-600 mb-4">
          Welcome, <%= user.username %>!
        </h1>

        <div class="text-left space-y-4">
          <p><strong>Username:</strong> <%= user.username %></p>
          <p><strong>Role:</strong> <%= user.role %></p>
          <p>
            <strong>Blood Group:</strong> <%= user.bloodGroup || 'Not Set' %>
          </p>
          <p>
            <strong>Last Donation:</strong>
            <%= user.lastDonationDate ? user.lastDonationDate.toDateString() :
            'No Donations Yet' %>
          </p>
        </div>

        <a
          href="/edit-profile"
          class="btn mt-6 bg-red-600 text-white hover:bg-red-700"
          >Edit Profile</a
        >
      </div>
    </main>
  </body>
</html>
