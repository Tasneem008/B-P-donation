<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof title !== 'undefined' ? title : 'Donor Profile' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen font-sans">

  <!-- Header -->
  <header class="bg-red-600 text-white shadow">
    <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
      <h1 class="text-2xl font-bold">Blood & Plasma Donation</h1>
      <div class="flex items-center gap-[6px]">
        <a href="<%= typeof homeUrl !== 'undefined' ? homeUrl : '#' %>" class="bg-white text-red-600 px-4 py-2 rounded hover:bg-gray-200 font-medium">
          Home
        </a>
        <a href="<%= typeof logoutUrl !== 'undefined' ? logoutUrl : '#' %>" class="bg-white text-red-600 px-4 py-2 rounded hover:bg-gray-200 font-medium">
          Logout
        </a>
      </div>
    </div>
  </header>

  <!-- Main Container -->
  <main class="max-w-6xl mx-auto px-4 py-8 grid grid-cols-1 lg:grid-cols-3 gap-8">

    <!-- Left: Profile Info -->
    <aside class="bg-white rounded-lg shadow p-6">
      <div class="flex flex-col items-center">
        <img
          class="w-32 h-32 rounded-full object-cover border-4 border-red-500"
          src="<%= (donor && donor.photoUrl) ? donor.photoUrl : 'https://via.placeholder.com/150' %>"
          alt="Profile Photo"
        >
        <h2 class="mt-4 text-xl font-bold text-gray-800">
          <%= (donor && donor.name) ? donor.name : 'Donor Name' %>
        </h2>
        <p class="text-gray-500">
          Donor ID: <%= (donor && donor.id) ? ('#' + donor.id) : '#---' %>
        </p>

        <% const eligible = donor && typeof donor.eligible !== 'undefined' ? donor.eligible : true; %>
        <span class="mt-2 px-3 py-1 <%= eligible ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %> text-sm font-medium rounded-full">
          <%= eligible ? 'Eligible to Donate' : 'Not Currently Eligible' %>
        </span>
      </div>

      <div class="mt-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-3">Contact Info</h3>
        <ul class="space-y-2 text-gray-600">
          <li><strong>Email:</strong> <%= donor && donor.email ? donor.email : '-' %></li>
          <li><strong>Phone:</strong> <%= donor && donor.phone ? donor.phone : '-' %></li>
          <li><strong>Location:</strong> <%= donor && donor.location ? donor.location : 'Dhaka, Bangladesh' %></li>
          <li><strong>Blood Group:</strong> <%= donor && donor.bloodGroup ? donor.bloodGroup : '-' %></li>
        </ul>
      </div>
    </aside>

    <!-- Right: Main Profile Content -->
    <section class="lg:col-span-2 space-y-8">

      <!-- Personal Info Card -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Personal Information</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-600">
          <p><strong>Age:</strong> <%= donor && donor.age ? donor.age : '-' %></p>
          <p><strong>Gender:</strong> <%= donor && donor.gender ? donor.gender : '-' %></p>
          <p><strong>Weight:</strong> <%= donor && donor.weight ? donor.weight + ' kg' : '- kg' %></p>
          <p><strong>Last Donation Date:</strong> <%= donor && donor.lastDonationDate ? donor.lastDonationDate : '-/-/-' %></p>
        </div>
      </div>

      <!-- Donation History Card -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Donation History</h3>
        <table class="w-full border-collapse">
          <thead>
            <tr class="bg-gray-100 text-left text-gray-600 text-sm">
              <th class="p-3 border">Date</th>
              <th class="p-3 border">Type</th>
              <th class="p-3 border">Quantity</th>
              <th class="p-3 border">Location</th>
            </tr>
          </thead>
          <tbody class="text-gray-700">
            <% if (Array.isArray(donationHistory) && donationHistory.length > 0) { %>
              <% donationHistory.forEach(function(item){ %>
                <tr>
                  <td class="p-3 border"><%= item.date || '-/-/-' %></td>
                  <td class="p-3 border"><%= item.type || '-' %></td>
                  <td class="p-3 border"><%= (item.quantity !== undefined && item.quantity !== null) ? item.quantity : '-' %></td>
                  <td class="p-3 border"><%= item.location || '-' %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td class="p-3 border">-/-/-</td>
                <td class="p-3 border">-</td>
                <td class="p-3 border">-</td>
                <td class="p-3 border">-</td>
              </tr>
              <tr>
                <td class="p-3 border">-/-/-</td>
                <td class="p-3 border">-</td>
                <td class="p-3 border">-</td>
                <td class="p-3 border">-</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Eligibility Status Card -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Eligibility Status</h3>
        <% const nextDate = typeof nextEligibleDate !== 'undefined' ? nextEligibleDate : '-/-/-'; %>
        <p class="text-gray-600">
          <%= eligible ? '✅ You are currently eligible to donate plasma.' : '⚠️ You are not currently eligible to donate.' %>
          Your next eligible blood donation date is:
          <span class="font-bold"><%= nextDate %></span>.
        </p>
      </div>

    </section>
  </main>

</body>
</html>
