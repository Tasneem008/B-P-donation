<!DOCTYPE html>
<html data-theme="light" lang="en">
  <head>
    <%- include('./partials/head.ejs'); %>
    <title>Hospital Panel - DonateLife</title>
  </head>
  <body class="bg-gray-100 text-gray-800 font-sans">
    <!-- Sidebar -->
    <div class="flex min-h-screen">
      <aside class="w-64 bg-white shadow-lg p-6 space-y-6">
        <a href="/">
          <h1 class="text-2xl font-bold text-red-600">DonateLife</h1>
        </a>
        <nav class="flex flex-col space-y-4">
          <a href="/hospital/dashboard" class="text-gray-700 hover:text-red-600"
            >Dashboard</a
          >
          <a
            href="/hospital/donor-request"
            class="text-gray-700 hover:text-red-600"
            >Donor Requests</a
          >
          <a href="#" class="text-gray-700 hover:text-red-600"
            >Recipient Requests</a
          >
          <a href="#" class="text-gray-700 hover:text-red-600"
            >Appointment Requests</a
          >
          <a
            href="/logout"
            class="text-gray-700 hover:text-red-600 cursor-pointer"
            >Logout</a
          >
        </nav>
      </aside>

      <!-- Main Panel -->
      <main class="flex-1 p-8 space-y-10">
        <!-- Appointments Management -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-bold mb-4 text-red-600">Donor Requests</h3>
          <div class="overflow-x-auto">
            <table class="w-full table-auto text-left">
              <thead>
                <tr class="bg-gray-100 text-gray-600">
                  <th class="p-3">Donor Name</th>
                  <th class="p-3">Requested Date</th>
                  <th class="p-3">Status</th>
                  <th class="p-3 text-center">Actions</th>
                </tr>
              </thead>
              <tbody class="text-sm text-gray-700">
                <% bloodDonorRequest.forEach(request => { %>
                <tr class="border-b">
                  <td class="p-3"><%= request.donorId.username %></td>
                  <td class="p-3"><%= new Date(request.createdAt).toISOString().split('T')[0] %></td>
                  <td class="p-3 text-yellow-600 font-medium">
                    <%= request.status %>
                  </td>
                  <td class="p-3 flex gap-2 justify-center">
                    <button
                      class="bg-green-500 text-white px-4 py-1 rounded hover:bg-green-600"
                      onclick=""
                    >
                      Approve
                    </button>
                    <button
                      class="bg-red-500 text-white px-4 py-1 rounded hover:bg-red-600"
                    >
                      Reject
                    </button>
                  </td>
                </tr>
                <% }) %>
                <!-- More rows can be dynamically added -->
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
